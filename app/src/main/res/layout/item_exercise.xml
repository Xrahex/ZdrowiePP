<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Checkbox po lewej stronie -->
    <CheckBox
        android:id="@+id/exerciseCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/exercise_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise_name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/exercise_details_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise_details"
            android:textSize="14sp"
            android:textColor="#666" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/deleteExerciseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/delete_exercise_description" />
</LinearLayout>
